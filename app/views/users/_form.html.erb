<!-- This is registration form consisting for followinf fields Name, Email, Password, Role, Approved Status-->
<div class="container">
<div id="form">
<%= bootstrap_form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
  <%= f.text_field :name, class: "form-control",placeholder: "Username"%>
  <%= f.text_field :email, class: "form-control" %>  
  <%= f.password_field :password, placeholder: "Leave blank if unchanged" %>
  </div>
  <div class="field" >
    <%= f.select(:role_id) do %>
      <% [['Regular', 1], ['Admin', 2]].each do |c| -%>
      <%= content_tag(:option, c.first, value: c.last) %>
      <% end %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :approved %>
    <%= f.radio_button :approved, true, label: "True", checked: true %>
    <%= f.radio_button :approved, false, label: "False" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit" , class: "btn btn-success" %>
  </div>
<% end %>
</div>
</div>