<h1>Editing User</h1>
<div class="container">
<div id="form">
<%= bootstrap_form_for(@user) do |f| %>
      <%= f.text_field :name, class: "form-control",placeholder: "Username"%>
  <div class="field">
  <%= f.text_field :email, class: "form-control" %>
</div>
  <div class="field" >
    <%= f.select(:role_id) do %>
      <% [['Regular', 1], ['Admin', 2]].each do |c| -%>
      <%= content_tag(:option, c.first, value: c.last) %>
      <% end %>
    <% end %>
  </div>
  <div class="field">

    <%= f.label :approved %>
    <%= f.radio_button :approved, true, label: "True", checked: true %>
    <%= f.radio_button :approved, false, label: "False" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit" , class: "btn btn-success" %>
  </div>
<% end %>
</div>
</div>
<%= link_to 'Show', @user, class: 'btn btn-info btn-xs' %> |
<%= link_to 'Back', users_path, class: 'btn btn-info btn-xs' %>
