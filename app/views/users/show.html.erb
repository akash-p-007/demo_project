<!--Displays User Information stored-->
<div class='btn-toolbar pull-right'>
  <button type="button" class="btn btn-danger" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span></button>
</div>
<div id="modal">
  <h1>User Details</h1>
  <table class="table table-bordered" id="users-table" id="user_show">
    <tbody>
      <tr>
      <p>
      <td> 1 </td>
        <td>Name</td>
        <td><%= @user.name %></td>
      </p>
      </tr>
      <tr>
        <td>2</td>
        <td>Email</td>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <td>3</td>
        <td>Role</td>
        <td><%= @user.role.name %></td>
      </tr>
       <tr>
        <td>4</td>
        <td>Approval Status</td>
        <td><%= @user.approved %></td>
      </tr>
       <tr>
        <td>5</td>
        <td>Joined On</td>
        <td><%= @joined_on %></td>
      </tr>
       <tr>
        <td>6</td>
        <td>Last Login</td>
        <td><%= @last_login %></td>
      </tr>
       <tr>
        <td>7</td>
        <td>No. of times logged in</td>
        <td><%= @user.sign_in_count %></td>
      </tr>
       
    </tbody>
  </table>
</div>         