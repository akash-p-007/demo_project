<h2>Log in</h2>
<div class="container">
  <div id="form"> 
    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
         <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
           </div>
      <% end -%>

      <div class="actions">
        <%= f.button "Sign in" , class: "btn btn-success btn-lg btn-block", data: {disable_with: "<i class='fa fa-spinner fa-spin fa-3x fa-fw'></i> Signing in..."} %>
      </div>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
