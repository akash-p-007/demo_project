<h2>Sign up</h2>
<div class="container">
  <div id="form">
<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
  <%= f.text_field :name %>
  </div>
  <div class="field">
  <br />
    <%= f.email_field :email, autofocus: true %>
  </div>
  <% if f.object.password_required? %>
  <div class="field">
    
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />  
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  <% end %>
  <div class="g-recaptcha" data-sitekey="6LfWVi0UAAAAAGnr2VEsEvGSkxF-Kvu6uipCKBgI"></div>
  
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-success"%>
  </div>
  <% end %>
</div>
</div>

<%= render "devise/shared/links" %>
  <div class="omb_login">
    <h3 class="omb_authTitle">Login with</h3>
      <div class="container">
      <div class="row omb_row-sm-offset-3 omb_socialButtons">
        <div class="col-xs-4 col-sm-2">
          <%= link_to "Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-lg btn-block omb_btn-facebook" %>
          <i class="fa fa-facebook visible-xs"></i>
          <span class="hidden-xs"></span>
          </a>
        </div>
        
        <div class="col-xs-4 col-sm-2">
          <%= link_to "Google+", user_google_oauth2_omniauth_authorize_path, class: "btn btn-lg btn-block omb_btn-google" %>
          <i class="fa fa-google-plus visible-xs"></i>
          <span class="hidden-xs"></span>
          </a>
        </div>
        </div>
    </div>  
  </div>    
