<div class='btn-toolbar pull-right'>
  <div class='btn-group'>
    <%= link_to 'Create New Group', new_group_path, class: "btn btn-success"%>    
  </div>
</div>
<h1>Listing Groups</h1>

<div class="container">
<table id="users-table"  class="table table-striped table-bordered dt-responsive nowrap" cellspacing="10" width="100%">
<thead>
	<th>Group Name</th>
	<th>Group Creator</th>
	<th>Edit Members</th>
	<th>View Posts</th>
	<th>Delete Group</th>
	</thead>
	<tbody>
	<% @groups.each do |g|%>
	<tr>
		<td><%= link_to "#{g.name}".html_safe, g, "data-toggle" => "modal", 'data-target' => '#showModal' %></td>
		<td><%= g.created_by %></td>
		<td><%= link_to "Edit",add_members_group_path(g) %></td>
		<td><%= link_to "View",group_posts_path(g)%></td>
		<% if can? :destroy, g%>
		<td><%= link_to "<i class='glyphicon glyphicon-remove-sign'></i>&nbsp; Destroy".html_safe, g, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>
	</tr>	
	<% end %>
	</tbody>
</table>
</div>
<div class="modal fade" id="showModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">                      
    </div>
  </div>
</div>