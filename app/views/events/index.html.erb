<h1>Listing Calendar Events</h1>
<div class="container">
<%= link_to "Add event", "https://www.google.com/calendar/gp#~calendar:view=e&bm=1", :target => '_blank',class: "btn btn-success" %>
<table id="users-table"  class="table table-striped table-bordered dt-responsive nowrap" cellspacing="10" width="100%">
<thead>
	<th>Event Name</th>
	<th>Event Date&Time</th>
	<th>Event Creator</th>
	<th>Event Link</th>
	</thead>
	<tbody>
	<% @events.each do |event|%>
	<tr>
		<td><%= event.name %></td>
		<td><%= event.start.strftime("%d-%b-%Y at %H:%M") %></td>
		<td><%= event.creator %></td>
		<td><%= link_to "View in Calendar", event.link ,:target => '_blank'%></td>
	</tr>	
	<% end %>
	</tbody>
</table>
</div>