                <td>Invitation Send At</td>
                <td>Invited By</td>              
              </tr>
            </thead>

            <tbody>
              <% @invites.each do |i| %>
                <tr>
                  <td><%= i.name %></td>
                  <td><%= i.email %></td>
                  <td><%= i.invitation_sent_at %></td>
                   <% invitee = User.find(i.invited_by_id) %>
              		<td><%= invitee.name %></td>
             		
             		</tr>
              <% end %>
            </tbody>
          </table> 
        </div>

        <div class="tab-pane" id="3a">
          <% @invites = User.created_by_invite %>
