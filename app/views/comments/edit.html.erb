  <div id="form">
    <h2>Edit Comment</h2>
    <%= bootstrap_form_for [@group, @post,@comment], url: group_post_comment_path do |f|%>
    <p>
      <%= f.text_area :body %>
      <% f.hidden_field :user_id, value: "#{current_user.id}" %>  
    </p>
    <p>
      <%= f.submit %>
    </p>
    <% end %>
  </div>
</div>
<div class="modal-footer">
    <center>
      <button type="button" class="btn btn-danger" onclick="javascript:window.location.reload()" data-dismiss="modal" aria-hidden="true">Close</button>
    </center>
</div>