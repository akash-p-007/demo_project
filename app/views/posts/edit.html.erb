<% content_for :head do %>
  <h1>Edit Post </h1>
<% end %>
<div class="container">
<div id="form">
  <%= bootstrap_form_for [@group, @post], url: group_post_path do |f|%>
  <% if @post.errors.any? %>
    <div class="error">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
