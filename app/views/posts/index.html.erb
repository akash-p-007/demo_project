<h2>Group Name : <%= "#{@group.name}"%></h2>
<div class='btn-toolbar pull-right'>
  <div class='btn-group'>
  	<%= link_to "Create New Post", new_group_post_path, class: "btn btn-default" %>
	</div>
</div>
<div class="container" id="posts">
	<% @post.each do |post| %>
		<div class="post_wrapper">
			<div class='btn-toolbar pull-right'>
			<% if can? :destroy, post%>
	  		<div class='btn-group'><%= link_to "<i class='glyphicon glyphicon-remove-sign'></i>&nbsp; Delete Post".html_safe,  group_post_path(@group,post), method: :delete, data: { confirm: 'Are you sure?' } %>
				<%= link_to "Hide", class: 'hide', data: {'js-hide-link' => true} %>
	  		</div>
	  	<% end %>	
			</div>

			<div class='btn-toolbar pull-left'>
				<h4>
				<%= link_to "#{post.title}".html_safe, group_post_path(@group,post)%>	<small>
				<p>&nbsp;&nbsp;&nbsp;&nbsp;Created <%= time_ago_in_words(post.created_at) %> Ago
				by<%= post.user.name %></p>	
			</small>	
			</h4>
			</div>
			<hr>
			<br>
			<p class="body">
				<blockquote><p>Description:</p></blockquote>
				<%= post.body %>
			</p>
			<br>
		</div>
	<% end %>
</div>